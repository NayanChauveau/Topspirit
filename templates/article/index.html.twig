{% extends 'base.html.twig' %}

{% block title %}Blog index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Blog index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Image</th>
                    <th>Content</th>
                    <th>Slug</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.title }}</td>
                    <td><img src="{{ vich_uploader_asset(article, 'imageFile') }}" alt=""></td>
                    <td>{{ article.content }}</td>
                    <td>{{ article.slug }}</td>
                    <td>
                        <a href="{{ path('article_show', {'slug': article.slug}) }}">show</a>
                        <a href="{{ path('article_edit', {'slug': article.slug}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('article_new') }}">Create new</a>
    </div>
{% endblock %}
